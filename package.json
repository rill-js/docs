{
  "name": "@rill/docs",
  "description": "Documentation website for Rill",
  "version": "0.0.2",
  "author": "Dylan Piercey <pierceydylan@gmail.com>",
  "babel": {
    "presets": [
      "latest"
    ],
    "plugins": [
      "transform-inline-environment-variables",
      "static-fs",
      "as-html"
    ]
  },
  "browserify": {
    "transform": [
      "babelify",
      "isbrowser"
    ],
    "plugin": [
      "bundle-collapser/plugin"
    ]
  },
  "bugs": {
    "url": "https://github.com/rill-js/docs/issues"
  },
  "dependencies": {
    "@rill/helmet": "^1.0.0",
    "@rill/html": "^5.0.0",
    "@rill/logger": "^2.1.1",
    "@rill/redirect": "^1.0.0",
    "@rill/set": "^1.1.0",
    "@rill/static": "^2.0.0",
    "as-html": "^2.0.1",
    "auto-sni": "^1.5.1",
    "babel-polyfill": "^6.16.0",
    "highlight.js": "^9.7.0",
    "marked": "^0.3.6",
    "raf": "^3.3.0",
    "rill": "^2.4.0",
    "scroll-behaviour": "^0.3.3",
    "source-map-support": "^0.4.5"
  },
  "devDependencies": {
    "babel-plugin-as-html": "^1.0.0",
    "babel-plugin-static-fs": "^1.1.0",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-preset-latest": "^6.16.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.17.5",
    "bundle-collapser": "^1.2.1",
    "cssnano": "3.8.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-bro": "^0.3.1",
    "gulp-changed": "^1.3.2",
    "gulp-concat": "^2.6.0",
    "gulp-gzip": "^1.4.0",
    "gulp-imagemin": "^3.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.2.0",
    "gulp-prune": "^0.2.0",
    "gulp-sourcemaps": "^2.2.0",
    "gulp-uglify": "^2.0.0",
    "gulp-util": "^3.0.7",
    "husky": "^0.11.9",
    "isbrowser": "0.1.0",
    "pretty-error": "^2.0.2",
    "snazzy": "^5.0.0",
    "standard": "^8.4.0"
  },
  "homepage": "https://github.com/rill-js/docs#readme",
  "keywords": [
    "docs",
    "documentation",
    "isomorphic",
    "rill",
    "universal"
  ],
  "license": "MIT",
  "main": "js/app.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rill-js/docs.git"
  },
  "scripts": {
    "build": "gulp build",
    "build:production": "NODE_ENV=production GIT_COMMIT=$(git rev-parse HEAD) gulp build && gulp compress",
    "deploy:production": "pm2 deploy ecosystem.json production",
    "lint": "standard --verbose | snazzy",
    "precommit": "npm run build:production && npm lint && git add ./.build --all",
    "setup:production": "pm2 deploy ecosystem.json production setup",
    "start": "node server.js",
    "watch": "rm -rf ./.build/client/*.gz && gulp"
  },
  "standard": {
    "ignore": [
      ".build"
    ]
  }
}
