{
  "name": "@rill/docs",
  "description": "Documentation website for Rill",
  "version": "0.0.1",
  "author": "Dylan Piercey <pierceydylan@gmail.com>",
  "private": true,
  "babel": {
    "presets": [
      "latest"
    ],
    "plugins": [
      "transform-inline-environment-variables",
      "git-version",
      "static-fs"
    ]
  },
  "browserify": {
    "transform": [
      "babelify",
      "isbrowser"
    ],
    "plugin": [
      "bundle-collapser/plugin"
    ]
  },
  "bugs": {
    "url": "https://github.com/rill-js/docs/issues"
  },
  "dependencies": {
    "@rill/html": "^2.3.0",
    "@rill/logger": "^1.2.1",
    "@rill/redirect": "^1.0.0",
    "@rill/set": "^1.1.0",
    "@rill/static": "^1.0.0",
    "as-html": "^2.0.0",
    "auto-sni": "^1.5.1",
    "babel-polyfill": "^6.13.0",
    "circular-json": "^0.3.1",
    "highlight.js": "^9.6.0",
    "marked": "^0.3.6",
    "raf": "^3.3.0",
    "rill": "^2.0.0",
    "scroll-behaviour": "^0.3.3",
    "source-map-support": "^0.4.2"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-plugin-git-version": "^0.1.4",
    "babel-plugin-static-fs": "^1.1.0",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-preset-latest": "^6.14.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.15.0",
    "bundle-collapser": "^1.2.1",
    "cssnano": "3.7.4",
    "del": "^2.2.2",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-bro": "^0.3.0",
    "gulp-concat": "^2.6.0",
    "gulp-gzip": "^1.4.0",
    "gulp-header": "^1.8.8",
    "gulp-imagemin": "^3.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.2.0",
    "gulp-sourcemaps": "^2.0.0-alpha",
    "gulp-uglify": "^2.0.0",
    "gulp-util": "^3.0.7",
    "husky": "^0.11.7",
    "isbrowser": "0.1.0",
    "pretty-error": "^2.0.0",
    "snazzy": "^4.0.1",
    "standard": "^8.0.0"
  },
  "homepage": "https://github.com/rill-js/docs#readme",
  "keywords": [
    "docs",
    "documentation",
    "isomorphic",
    "rill",
    "universal"
  ],
  "license": "MIT",
  "main": "js/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rill-js/docs.git"
  },
  "scripts": {
    "build": "npm run remove:build && gulp build",
    "build:production": "NODE_ENV=production npm run build",
    "lint": "standard --verbose | snazzy",
    "precommit": "npm run build:production && npm test && git add ./.build --all",
    "remove:build": "rm -rf ./.build",
    "remove:gzip": "rm -rf ./.build/client/*.gz",
    "start": "node run",
    "watch": "npm run remove:gzip && gulp watch"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      ".build"
    ],
    "globals": [
      "GIT_COMMIT"
    ]
  }
}
