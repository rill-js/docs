{
  "name": "@rill/docs",
  "description": "Documentation website for Rill",
  "version": "0.0.2",
  "author": "Dylan Piercey <pierceydylan@gmail.com>",
  "babel": {
    "presets": [
      "latest"
    ],
    "plugins": [
      "transform-inline-environment-variables",
      "static-fs",
      "as-html"
    ]
  },
  "browserify": {
    "transform": [
      "babelify",
      "isbrowser"
    ],
    "plugin": [
      "bundle-collapser/plugin"
    ]
  },
  "bugs": {
    "url": "https://github.com/rill-js/docs/issues"
  },
  "dependencies": {
    "@rill/helmet": "^1.0.2",
    "@rill/html": "^5.2.2",
    "@rill/logger": "^2.1.1",
    "@rill/redirect": "^1.0.0",
    "@rill/set": "^1.1.0",
    "@rill/static": "^2.0.0",
    "as-html": "^2.0.1",
    "babel-polyfill": "^6.23.0",
    "greenlock-koa": "^2.0.3",
    "highlight.js": "^9.10.0",
    "marked": "^0.3.6",
    "mini-url": "^1.6.1",
    "ms": "^1.0.0",
    "raf": "^3.3.0",
    "rill": "^4.3.3",
    "scroll-behaviour": "^0.3.3",
    "source-map-support": "^0.4.14"
  },
  "devDependencies": {
    "babel-plugin-as-html": "^1.0.0",
    "babel-plugin-static-fs": "^1.1.0",
    "babel-plugin-transform-inline-environment-variables": "^6.8.0",
    "babel-preset-latest": "^6.24.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.8",
    "bundle-collapser": "^1.2.1",
    "cssnano": "3.10.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-bro": "^1.0.2",
    "gulp-changed": "^2.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-gzip": "^1.4.0",
    "gulp-imagemin": "^3.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.4.0",
    "gulp-prune": "^0.2.0",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-uglify": "^2.1.2",
    "gulp-util": "^3.0.8",
    "husky": "^0.13.3",
    "isbrowser": "0.1.0",
    "pretty-error": "^2.0.3",
    "snazzy": "^6.0.0",
    "standard": "^9.0.2"
  },
  "homepage": "https://github.com/rill-js/docs#readme",
  "keywords": [
    "docs",
    "documentation",
    "isomorphic",
    "rill",
    "universal"
  ],
  "license": "MIT",
  "main": "js/app.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rill-js/docs.git"
  },
  "scripts": {
    "build": "gulp build",
    "build:production": "NODE_ENV=production VERSION=2 gulp build && gulp compress",
    "deploy:production": "pm2 deploy ecosystem.json production",
    "lint": "standard --verbose | snazzy",
    "precommit": "npm run lint && git add ./.build --all",
    "setup:production": "pm2 deploy ecosystem.json production setup",
    "start": "node server.js",
    "watch": "rm -rf ./.build/client/*.gz && gulp"
  },
  "standard": {
    "ignore": [
      ".build"
    ]
  }
}
